@page
@model Cupcakes.Pages.DeleteCupcakeModel

<h1>Remove Cupcake</h1>

<!-- Display Cupcake Details -->
<img src="~/uploads/@Model.Cupcake.ImageFilename" alt="@Model.Cupcake.Name" style="width: 300px; height: 300px;" />
<h2>@Model.Cupcake.Name</h2>

<form method="post">
    <input type="hidden" asp-for="Cupcake.CupcakeId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
</form>